<?xml version="1.0"?>
<config>
    <tabs>
        <extensionsmall translate="label" module="emallfacebook">
            <label>Extensionsmall</label>
            <sort_order>200</sort_order>
        </extensionsmall>
    </tabs>
    <sections>
        <extensionsmall_emallfacebook translate="label" module="emallfacebook">
            <label>Emall Facebook</label>
            <tab>extensionsmall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <facebook translate="label">
                    <label>Facebook Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enable Facebook</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable Emall Facebook plugin</comment>
                        </enabled>
                        <facebook_feed>
                            <label>Facebook Page Link</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Inset link of Facebook page (in format https://www.facebook.com/facebookpage)</comment>
                        </facebook_feed>
                        <facebook_tabs>
                            <label>Facebook Tabs</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Tabs to render i.e. timeline,events,messages</comment>
                        </facebook_tabs>
                        <facebook_width>
                            <label>Facebook Page Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_width>
                        <facebook_height>
                            <label>Facebook Page Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_height>
                        <facebook_hide_cover>
                            <label>Hide Facebook Cover</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>160</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_hide_cover>
                        <facebook_show_posts>
                            <label>Show Facebook Posts</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>170</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_show_posts>
                        <facebook_showfaces>
                            <label>Show Faces</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>180</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable Faces</comment>
                        </facebook_showfaces>
                        <facebook_small_header>
                            <label>Use Small Header</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>190</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_small_header>
                        <facebook_adapt_container_width>
                            <label>Adapt Container Width</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>195</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_adapt_container_width> 
                    </fields>
                </facebook> 
                <facebook_style translate="label">
                    <label>Facebook Box Styling</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <facebook_box_top_position>
                            <label>Facebook Container Top Position</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Facebook Container offset from top of screen</comment>
                        </facebook_box_top_position>
                        <facebook_box_side>
                            <label>Facebook Container Side</label>
                            <frontend_type>select</frontend_type>
                            <source_model>emallfacebook/system_config_source_load_options</source_model>
                            <sort_order>210</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select side to display facebook container</comment>
                        </facebook_box_side>
                        <facebook_box_width>
                            <label>Facebook Container Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>220</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_box_width>
                        <facebook_box_height>
                            <label>Facebook Container Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>230</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_box_height>
                        <facebook_box_background>
                            <label>Facebook Container Background Color</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>emallfacebook/adminhtml_system_config_form_field_color</frontend_model>
                            <sort_order>240</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_box_background>
                    </fields>	
                </facebook_style>			
            </groups>
        </extensionsmall_emallfacebook>
    </sections>
</config>